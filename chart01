Form1代码
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApplication31
{
    
    public partial class Form1 : Form
    {
        public static int C3;
        public static int C4;
        public static int C10;
        public static int C11;
        public static string C8;
        public static string C9;

        System.Timers.Timer t = new System.Timers.Timer(); //设置时间间隔为5秒
        QUEREN b = null;
        public Form1()
        {
          

            InitializeComponent();
            b = new QUEREN();//实例化b窗体
            b.MyEvent += new QUEREN.MyDelegate(b_MyEvent);//监听b窗体事件
            int a =200;


            

            C3 = a;//窗口的设定值
            C10 = C3;
            Size newsize = new Size(1000, 500);

            this.Size = newsize;
            t.Elapsed += new System.Timers.ElapsedEventHandler(Timer_TimesUp);
            this.t.Interval = C10;
            t.AutoReset = true;//false; //每到指定时间Elapsed事件是触发一次（false），还是一直触发（true）
           
        }

        private void button1_Click(object sender, EventArgs e)
        {
            t.Enabled = true; //是否触发Elapsed事件
            t.Start();
            

        }


        public void Timer_TimesUp(object sender, System.Timers.ElapsedEventArgs e)
        {
            //到达指定时间5秒触发该事件输出 Hello World!!!!
            // System.Diagnostics.Debug.WriteLine("Hello World!!!!");
            //MessageBox.Show("JLKJKLJKLJJLJ");
            Random ro = new Random();
            //long tick = DateTime.Now.Ticks;
            //Random ran = new Random((int)(tick & 0xffffffffL) | (int)(tick >> 32));
            int a = ro.Next(1, 40);
            this.textBox1.Text = a.ToString();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            


        }

        private void button3_Click(object sender, EventArgs e)
        {
            t.Stop();
            //System.Diagnostics.Debug.WriteLine("未到指定时间5秒提前终结！！！");
        }

        public void button2_Click(object sender, EventArgs e)
        {
            Random ro1 = new Random();
            int a = ro1.Next(1, 40);
            this.textBox2.Text = a.ToString();
        }

        private void button4_Click(object sender, EventArgs e)
        {
            int Q = Convert.ToInt32(textBox3.Text);
            C4 = Q;//窗口的新值
            textBox4.Text = C10.ToString();
            textBox5.Text = C4.ToString();
            //QUEREN form3 = new QUEREN();
            // form3.ShowDialog
            b.ShowDialog();

        }
            void b_MyEvent()
            {
           
            this.t.Interval = C4;
            C10 = C4;
       
            
        }

        private void textBox4_TextChanged(object sender, EventArgs e)
        {

        }
    }


}


 
QUEREN代码
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApplication31
{
    public partial class QUEREN : Form
    {
        public static int C1;
        public static int C2;
        public static int C5=1;
        public static int C6=0;
        public QUEREN()
        {
            InitializeComponent();
        }

        private void Form2_Load(object sender, EventArgs e)
        {
            Size news = new Size(600,600);
            this.Size = news;
            C1 = Form1.C10;
            C2 = Form1.C4;
            if(C1==C2)
            {

                label1.Text = "参数相同，请重新输入！";
            }
            else
                {
                label1.Text = "参数已经设定完毕！";
                    C6=0;
                
            }



        }

        private void button2_Click(object sender, EventArgs e)
        {
          
            this.Close();
        }
        public delegate void MyDelegate();
        public event MyDelegate MyEvent;
        private void button1_Click(object sender, EventArgs e)
        {
            if (MyEvent != null)
                MyEvent();//引发事件
               this.Close();
        }
    }
    }
